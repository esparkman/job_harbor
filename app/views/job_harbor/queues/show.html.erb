<% content_for :header_actions do %>
  <div class="flex items-center gap-2">
    <% if @queue.paused? %>
      <%= button_to "Resume Queue", resume_queue_path(@queue.name), method: :delete, class: "btn btn-default btn-sm" %>
    <% else %>
      <%= button_to "Pause Queue", pause_queue_path(@queue.name), method: :post, class: "btn btn-secondary btn-sm" %>
    <% end %>
    <%= link_to "\u2190 Back to Queues", queues_path, class: "btn btn-secondary btn-sm" %>
  </div>
<% end %>

<div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6">
  <%= render JobHarbor::StatCardComponent.new(
    label: "Pending",
    value: @queue.pending_count,
    type: :pending
  ) %>

  <%= render JobHarbor::StatCardComponent.new(
    label: "Scheduled",
    value: @queue.scheduled_count,
    type: :scheduled
  ) %>

  <%= render JobHarbor::StatCardComponent.new(
    label: "In Progress",
    value: @queue.in_progress_count,
    type: :in_progress
  ) %>

  <%= render JobHarbor::StatCardComponent.new(
    label: "Failed",
    value: @queue.failed_count,
    type: :failed
  ) %>
</div>

<% if @queue.paused? %>
  <div class="alert alert-warning mb-4">
    <svg class="w-4 h-4 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
    This queue is currently paused. Jobs will not be processed until it is resumed.
  </div>
<% end %>

<% if @jobs.empty? %>
  <%= render JobHarbor::EmptyStateComponent.new(
    title: "No jobs in this queue",
    description: "Jobs will appear here when they are enqueued to '#{@queue.name}'.",
    icon: :jobs
  ) %>
<% else %>
  <div class="card">
    <div class="card-header">
      <h2 class="card-title">Jobs in Queue</h2>
    </div>
    <div class="table-wrapper">
      <table class="sqd-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Job Class</th>
            <th>Status</th>
            <th>Scheduled At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td><%= link_to job.id, job_path(job), class: "link font-medium" %></td>
              <td><code class="text-sm font-mono"><%= job.class_name %></code></td>
              <td><%= render JobHarbor::BadgeComponent.new(status: job.status) %></td>
              <td class="text-sm"><%= job.scheduled_at&.strftime("%b %d, %H:%M:%S") || "\u2014" %></td>
              <td>
                <% if job.can_retry? %>
                  <%= button_to "Retry", retry_job_path(job), method: :post, class: "btn btn-secondary btn-xs" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mt-4">
    <%= render JobHarbor::PaginationComponent.new(pagy: @pagy) %>
  </div>
<% end %>
